  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
         
          "--runInBand",
          "--no-cache",
          "--config",
          "./jest.config.json"
      ],
      "runtimeArgs": [
          "--inspect-brk",
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}