{
  "name": "@spms-apps/ts-logger",
  "version": "0.0.7",
  "description": "A logger built with winston for creating logstash logs out of the box",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest ./tests --coverage --runInBand --config ./jest.config.json",
    "build": "rm -rf ./lib && npm run lint && npm run test && tsc -p ./tsconfig.dist.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "coverall": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NMA-SPMS/ts-logger.git"
  },
  "keywords": [
    "logger",
    "winston",
    "logstash"
  ],
  "author": {
    "name": "NMA-SPMS",
    "email": "nma@spms.min-saude.pt"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.14.9",
    "@types/winston": "^2.4.4",
    "commitizen": "^3.1.1",
    "commitplease": "^3.2.0",
    "coveralls": "^3.0.4",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "net": "^1.0.2",
    "winston": "^3.2.1",
    "winston-transport": "^4.3.0"
  },
  "commitplease": {
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "chore",
      "merge"
    ],
    "scope": "\\S+.*"
  }
}
